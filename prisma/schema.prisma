generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
  directUrl = env("POSTGRES_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Case {
  id            String         @id @default(cuid())
  name          String
  vectorStoreId String?
  memoryRebuildInProgress Boolean @default(false)
  memoryRebuildRequestedAt DateTime?
  documents     Document[]
  ingestJobs    DocumentIngestJob[]
  timeline      TimelineEvent[]
  entities      CaseEntity[]
  facts         CaseFact[]
  obligations  Obligation[]
  insights      Insight[]
  lawyerNotes   LawyerNote[]
  chatThreads   ChatThread[]
  chatMessages  ChatMessage[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Document {
  id            String   @id @default(cuid())
  caseId        String
  title         String
  blobUrl       String
  openaiFileId  String?
  vectorStoreId String?
  documentType  String?
  mimeType      String?
  size          Int?
  createdAt     DateTime @default(now())
  ingestJob     DocumentIngestJob?
  chunks        DocumentChunk[]

  case Case @relation(fields: [caseId], references: [id], onDelete: Cascade)
}

model TimelineEvent {
  id         String   @id @default(cuid())
  caseId     String
  documentId String?
  occurredAt DateTime?
  eventDate  DateTime?
  precision  String
  title      String
  summary    String
  category   String
  people     String[]
  sourceRef  Json
  citationsJson Json?
  confidence String?
  createdAt  DateTime @default(now())

  case Case @relation(fields: [caseId], references: [id], onDelete: Cascade)

  @@index([caseId, documentId])
}

enum CaseEntityType {
  person
  child
  attorney
  judge
  org
  address
}

enum CaseFactType {
  parenting_rule
  custody
  support
  restriction
  definition
  asset
  debt
  schedule
  education
  medical
  travel
  communication
  other
}

enum ObligationType {
  payment
  exchange
  notice
  filing
  other
}

model CaseEntity {
  id            String         @id @default(cuid())
  caseId        String
  documentId    String?
  type          CaseEntityType
  name          String
  attributesJson Json?
  citationsJson Json
  confidence    String
  createdAt     DateTime       @default(now())

  case Case @relation(fields: [caseId], references: [id], onDelete: Cascade)

  @@index([caseId, type])
  @@index([caseId, documentId])
}

model CaseFact {
  id            String       @id @default(cuid())
  caseId        String
  documentId    String?
  type          CaseFactType
  key           String
  valueJson     Json
  citationsJson Json
  confidence    String
  updatedAt     DateTime     @updatedAt
  createdAt     DateTime     @default(now())

  case Case @relation(fields: [caseId], references: [id], onDelete: Cascade)

  @@index([caseId, type])
  @@index([caseId, key])
  @@index([caseId, documentId])
}

model Obligation {
  id            String         @id @default(cuid())
  caseId        String
  documentId    String?
  obligationType ObligationType
  dueDate       DateTime?
  recurrence    String?
  description   String
  citationsJson Json
  confidence    String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  case Case @relation(fields: [caseId], references: [id], onDelete: Cascade)

  @@index([caseId, obligationType])
  @@index([caseId, documentId])
}

model DocumentChunk {
  id            String   @id @default(cuid())
  caseId        String
  documentId    String
  pageNumber    Int?
  chunkIndex    Int
  text          String
  embedding     Unsupported("vector")?
  embeddingJson Json?
  createdAt     DateTime @default(now())

  case     Case     @relation(fields: [caseId], references: [id], onDelete: Cascade)
  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([caseId, documentId])
  @@index([documentId, pageNumber])
}

model Insight {
  id        String   @id @default(cuid())
  caseId    String
  content   Json
  createdAt DateTime @default(now())

  case Case @relation(fields: [caseId], references: [id], onDelete: Cascade)
}

model LawyerNote {
  id         String   @id @default(cuid())
  caseId     String
  title      String
  content    String
  sourceRefs Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  case Case @relation(fields: [caseId], references: [id], onDelete: Cascade)
}

model ChatThread {
  id        String   @id @default(cuid())
  caseId    String
  title     String
  createdAt DateTime @default(now())

  case     Case         @relation(fields: [caseId], references: [id], onDelete: Cascade)
  messages ChatMessage[]
}

model ChatMessage {
  id        String   @id @default(cuid())
  caseId    String
  threadId  String
  role      String
  content   Json
  createdAt DateTime @default(now())

  case   Case       @relation(fields: [caseId], references: [id], onDelete: Cascade)
  thread ChatThread @relation(fields: [threadId], references: [id], onDelete: Cascade)
}

enum DocumentIngestStatus {
  queued
  uploaded
  extracting
  ready_to_index
  indexing
  done
  error
}

model DocumentIngestJob {
  id                   String               @id @default(cuid())
  caseId               String
  filename             String
  mimeType             String?
  sizeBytes            Int?
  blobUrl              String
  status               DocumentIngestStatus @default(queued)
  error                String?
  extractedTextBlobUrl String?
  openaiFileId         String?
  documentId           String?              @unique
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt

  case     Case      @relation(fields: [caseId], references: [id], onDelete: Cascade)
  document Document? @relation(fields: [documentId], references: [id], onDelete: SetNull)

  @@index([caseId, status])
}
